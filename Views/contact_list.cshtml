<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <link href="Content/styles.css" rel="stylesheet" type="text/css">
    <title>Contact List</title>
  </head>
  <body class="container">
    <h1>Here are your contacts: </h1>

    <ul>
      @foreach(var person in Model)
      {
        <li>@person.GetName()</li>
        <li>@person.GetPhone()</li>
        <li>@person.GetAddress()</li>
        <br>
      }
    </ul>

    <form action="/new-contact" method="get">
      <button type="submit" class="btn-sm btn-info btn-block" name="make-new-contact">Add Another Contact</button>
    </form>
    <br>
    <form action="/contacts-deleted" method="post">
      <button type="submit" class="btn-sm btn-info btn-block" name="delete-contacts">Clear Contact</button>
    </form>

  </body>
</html>
