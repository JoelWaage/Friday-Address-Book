<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <link href="Content/styles.css" rel="stylesheet" type="text/css">
    <title>Contact List</title>
  </head>
  <body class="container">
    <h1>Here are your contacts: </h1>

    <ul>
      @foreach(var person in Model)
      {
        <li id="getName"><strong>@person.GetName():</strong></li>
        <ul>
          <li>Phone Number:</li>
          <ul>
            <li class="info"><strong>@person.GetPhone()</strong></li>
          </ul>
          <li>Address:</li>
          <ul>
            <li class="info"><strong>@person.GetAddress().GetStreet()</li>
            <li class="info">@person.GetAddress().GetApartment()</li>
            <li class="info">@person.GetAddress().GetCity()</li>
            <li class="info">@person.GetAddress().GetState()</li>
            <li class="info">@person.GetAddress().GetZip()</strong></li>
          </ul>
        </ul>
      }
    </ul>

    <form action="/new-contact" method="get">
      <button type="submit" class="btn-lg btn-success btn-block" name="make-new-contact">Add Another Contact</button>
    </form>
    <br>
    <form action="/contacts-deleted" method="post">
      <button type="submit" class="btn-lg btn-success btn-block" name="delete-contacts">Clear Contact</button>
    </form>

  </body>
</html>
